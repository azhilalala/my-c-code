#include<iostream>    
using namespace std;    
void swap(int & a, int & b)          //引用可自定义类的对象也可预定好类型的普通数据
{    
	int t = a;    
	a = b;     
	b = t;    
}    


int main() {    
	int x, y;    
	cout << "请输入x,y的值" << endl;    
	cin >> x;    
	cin >> y;    
	swap(x,y);                              //交换a、b
	cout << "x=" <<x<<" "<<"y="<<y<<endl;    
	return 0;    
}    
